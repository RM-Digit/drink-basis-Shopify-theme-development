<script>
$('.discover-prod-next').on('click', function(e){
    var $wrapEl = $(this).closest('.discover-prod-wrap');
    var $activeItem = $wrapEl.find('.discover-item.active');
    if($activeItem.is(':last-child')){
        $activeItem.removeClass('active');
        $wrapEl.find('.discover-item').first().addClass('active');
    } else {
        $activeItem.removeClass('active').next().addClass('active');
    }
});
</script>