<section class="plp-discover">
    <div class="container">
        <div class="row">
            <div class="column col-xs-12 col-md-4 discover-intro">
                <h2 class="headline">{{headline}}</h2>
                <div>{{description}}</div>
            </div>
            <div class="column col-xs-12 col-md-8 discover-prod-wrap count4">
