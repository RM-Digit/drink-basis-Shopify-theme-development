<script>
function initSliderReviews(){
    $('.plp-reviews .slider').slick({
        infinite: true,
        arrows: false,
        dots: true,
        slidesToShow: 1,
        slidesToScroll: 1
    });
}
function checkMobileSliderReviews(){
    if($('.isMobile').css('display') == 'block'){
        if(!$('.plp-reviews .slider').hasClass('slick-initialized')){
            initSliderReviews();
        }
    } else {
        if($('.plp-reviews .slider').hasClass('slick-initialized')){
            $('.plp-reviews .slider').slick('unslick');
        }
    }
}
$(document).ready(function(){
    checkMobileSliderReviews();
    $(window).resize(function(e){
        checkMobileSliderReviews();
    });
});
</script>