{%- assign transition_text = settings.transition_text -%}

<div class="feature-item {% if is_block_odd %}feature-item--odd{% endif %}" data-alignment="{{ blocks_alignment }}">
	<div class="feature-image">
		{%- if image_link != blank -%}<a href="{{ image_link }}">{%- endif -%}
			{%- if image != blank -%}
				<div
					 class="feature-image-bg lazyload"
					 data-bgset="{% include 'bgset', image: image %}"
					 data-sizes="auto"
					 data-parent-fit="cover"
					 style="padding-top: {{ image_height }};">
				</div>
				<noscript>
					<div class="feature-image-bg" style="background-image: url({{ image | img_url: '1024x' }});padding-top: {{ image_height }};"></div>
				</noscript>
			{%- else -%}
				<div class="feature-image-bg" style="padding-top: {{ image_height }};">
					<div class="svg-placeholder">
						{%- capture current -%}{% cycle 'current': 1, 2 %}{%- endcapture -%}
						{{- 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' -}}
					</div>
				</div>
			{%- endif -%}
		{%- if image_link != blank -%}</a>{%- endif -%}
	</div>
	<div class="feature-text">
		<div class="feature-text-wrap">
			<h2{% if transition_text %} class="will-animate" data-animation="popUp" data-animation-delay="250"{% endif %}>
				{{- heading | escape -}}
			</h2>
			<div class="feature-text__p{% if transition_text %} will-animate{% endif %}"{% if transition_text %} data-animation="popUp" data-animation-delay="500"{% endif %}>
				{{- description -}}
			</div>
			{%- if button_text != blank -%}
				<div class="feature-text__button{% if transition_text %} will-animate{% endif %}"{% if transition_text %} data-animation="popUp" data-animation-delay="750"{% endif %}>
					<a href="{{ button_link }}" class="button button--{{ button_style }}">{{ button_text }}</a>
				</div>
			{%- endif -%}
		</div>
	</div>
</div>
