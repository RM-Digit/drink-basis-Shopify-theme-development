{% case type %}
    {% when 'section' %}
        {% assign object = section.settings %}
    {% else %}
        {% assign object = block.settings %}
{% endcase %}

{% assign s1-headline = object.science-s1-headline %}
{% assign s1-copy = object.science-s1-copy %}
{% assign s2-i1-icon = object.science-s2-i1-icon %}
{% assign s2-i1-headline = object.science-s2-i1-headline %}
{% assign s2-i1-copy = object.science-s2-i1-copy %}
{% assign s2-i2-icon = object.science-s2-i2-icon %}
{% assign s2-i2-headline = object.science-s2-i2-headline %}
{% assign s2-i2-copy = object.science-s2-i2-copy %}

{% assign cta-url = object.science-cta-url %}
{% if object.science-cta-text != blank %}
    {% assign cta-text = object.science-cta-text %}
{% else %}
    {% assign cta-text = "Buy Now" %}
{% endif %}

<section id="pdpScience" class="pdp-science">
    <div class="container container-full">
        <div class="row">
            <div class="col-xs-12 col-sm-6 sbs black-pearl">
                <div class="content">
                    <h2 class="headline inner-headline">{{s1-headline}}</h2>
                    <div class="copy">
                        {{s1-copy}}
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 sbs iceberg">
                <div class="content">
                    <div class="info info1">
                        <h3 class="info-headline">
                            <img src="{{s2-i1-icon | img_url: 'x24', scale: 2}}" class="headline-icon"/>
                            <span class="headline-text">{{s2-i1-headline}}</span>
                        </h3>
                        <div class="copy">
                            {{s2-i1-copy}}
                        </div>
                    </div>
                    <div class="info info2">
                        <h3 class="info-headline">
                            <img src="{{s2-i2-icon | img_url: 'x24', scale: 2}}" class="headline-icon"/>
                            <span class="headline-text">{{s2-i2-headline}}</span>
                        </h3>
                        <div class="copy">
                            {{s2-i2-copy}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if cta-url != blank %}
    <div class="section-cta-wrap"><a href="{{cta-url}}" class="btn btn-default">{{cta-text}}</a></div>
    {% endif %}
</section>

<style>
.pdp-science {
    text-align: center;
    padding-bottom: 0;
}
.pdp-science .container.container-full {
    max-width: none;
    padding: 0;
}
.pdp-science .container-full [class * =col-] {
    padding-left: 1.25rem;
    padding-right: 1.25rem;
    width: 100%;
}
.sbs.black-pearl {
    background: #191c22;
    color: #fff;
}
.sbs.iceberg {
    background: #bcd7d7;
    color: #191c22;
}
.pdp-science .sbs {
    padding: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
}
.sbs .content {
    max-width: 335px;
    text-align: center;
    padding: 30px 4px;
}
.sbs .headline {
    max-width: 250px;
    margin-bottom: 1rem;
}
.info-headline {
    font-size: 18px;
    margin-bottom: .75rem;
}
.info-headline .headline-icon {
    max-height: 24px;
    vertical-align: middle;
    display: inline-block;
}
.info-headline .headline-text {
    vertical-align: middle;
}
.sbs .info:not(:last-child) {
    margin-bottom: 1.5rem;
}
@media (min-width: 768px)
{
    .sbs .content {
        max-width: 380px;
        text-align: left;
        padding: 150px 0px;
    }
    .sbs .headline {
        max-width: none;
    }
    .info-headline {
        font-size: 24px;
    }
    .sbs .info:not(:last-child) {
        margin-bottom: 2rem;
    }
}
</style>